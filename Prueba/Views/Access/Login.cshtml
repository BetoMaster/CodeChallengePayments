@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout-Login.cshtml";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Enter", "Access", FormMethod.Post, new { role = "form", @class = "form-horizontal", id = "frm" }))
        {
            <div class="form-group">
                @Html.Label("Email", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" name="user" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.Label("Password", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="password" name="pass" class="form-control" />
                </div>
            </div>
            <br />
            <div style="text-align:right;">
                <input type="submit" class="btn btn-success" value="Enter" />
            </div>
        }
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $("#frm").submit(function (e) {
                e.preventDefault();

                url = "@Url.Content("~/Access/Enter")";
                parameters = $(this).serialize();

                $.post(url, parameters, function (data) {
                    if (data == "1") {
                        document.location.href = "@Url.Content("~/")";
                    } else {
                        alert(data);
                    }
                });
            });
        });
    </script>
}
